# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{dart,yaml,json}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.{gradle,kt,kts}]
indent_size = 4

[*.{swift,h,m}]
indent_size = 4

[Makefile]
indent_style = tab
